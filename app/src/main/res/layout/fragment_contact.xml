<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="navController"
            type="androidx.navigation.NavController" />

        <variable
            name="viewModel"
            type="com.developersbreach.clientproject.view.contact.ContactViewModel" />

        <variable
            name="fragment"
            type="com.developersbreach.clientproject.view.contact.ContactFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/contact_detail_fragment_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.contact.ContactFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/contact_fragment_appbar"
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:background="@color/colorCardSurface"
            android:fitsSystemWindows="true"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/shop_recycler_view">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/contact_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@id/contact_fragment_toolbar">

                <ImageView
                    android:id="@+id/contact_banner_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitCenter"
                    app:layout_collapseMode="parallax"
                    tools:ignore="ContentDescription"
                    tools:layout_gravity="center"
                    tools:src="@drawable/ic_contact" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/contact_fragment_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:bindContactFragmentNavigationIconListener="@{navController}"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_up_button" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shop_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:spanCount="2"
                android:clipToPadding="false"
                android:padding="@dimen/recycler_view_spacing_dimen"
                android:scrollbars="none"
                app:bindContactFragmentReference="@{fragment}"
                app:bindContactListData="@{viewModel.imagesData}"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/item_shop" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
