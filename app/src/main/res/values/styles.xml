<resources>

    <style name="Widget.Customer.Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Customer.Toolbar.Main" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="AppTheme.Customer.Dialog.Alert" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="materialAlertDialogTitleTextStyle">@style/Widget.Customer.dialog.Title</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.CustomerDialog.Button</item>
    </style>

    <style name="Widget.Customer.dialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.CustomerDialog.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/montserrat</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSurface</item>
        <item name="backgroundTint">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">?attr/colorSurface</item>
    </style>

    <!--  BottomSheetDialog Modal  -->
    <style name="ThemeOverlay.Shiva.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Shiva.BottomSheet</item>
    </style>

    <style name="Widget.Shiva.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Shiva</item>
        <item name="backgroundTint">@color/shiva_pink_nav_bar</item>
    </style>

    <style name="ShapeAppearanceOverlay.Shiva" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

